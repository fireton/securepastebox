{
  "DataProtection": {
    "ApplicationName": {
      "EnvVarName": "DATA_PROTECTION_APPLICATION_NAME",
      "DefaultValue": "SecurePasteBox"
    },
    "CacheKey": {
      "EnvVarName": "DATA_PROTECTION_CACHE_KEY",
      "DefaultValue": "DataProtection-Keys"
    }
  },
  
  "KeyStorage": {
    "Type": {
      "EnvVarName": "KEY_STORAGE_TYPE",
      "DefaultValue": "Memory"
    }
  },

  "Files": {
    "DataDirectory": {
      "EnvVarName": "FILES_DATA_DIRECTORY",
      "DefaultValue": "/data"
    },
    "CleanupInterval": {
      "EnvVarName": "FILES_CLEANUP_INTERVAL",
      "DefaultValue": "00:05:00"
    }
  },

  "RateLimit": {
    "MinIntervalSeconds": {
      "EnvVarName": "RATE_LIMIT_MIN_INTERVAL_SECONDS",
      "DefaultValue": 5
    }
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },

  "AllowedHosts": "*"
}
