{
  "DataProtection": {
    "ApplicationName": {
      "EnvVarName": "DATA_PROTECTION_APPLICATION_NAME",
      "DefaultValue": "SecurePasteBox"
    },
    "KeyLifetime": {
      "EnvVarName": "DATA_PROTECTION_KEY_LIFETIME",
      "DefaultValue": "30.00:00:00" // 30 days
    },
    "KeyStorage": {
      "Type": {
        "EnvVarName": "DATA_PROTECTION_KEY_STORAGE_TYPE",
        "DefaultValue": "FileSystem"
      },
      "FilePath": {
        "EnvVarName": "DATA_PROTECTION_KEY_STORAGE_PATH",
        "DefaultValue": "/var/lib/securepastebox/dataprotection-keys"
      },
      "RedisConnectionString": {
        "EnvVarName": "DATA_PROTECTION_KEY_STORAGE_REDIS_CONNECTION",
        "DefaultValue": "localhost:6379"
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}
